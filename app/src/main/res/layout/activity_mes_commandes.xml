<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MesCommandes_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="@color/black"
        android:padding="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Se connecter / Inscrivez-vous"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="18sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            app:tint="@color/black"
            android:padding="10dp"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Mes commandes"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:padding="25dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/baseline_credit_card_off_24"
                app:tint="@color/app_color" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="108dp"
                android:layout_height="99dp"
                android:padding="25dp"
                android:gravity="center"
                app:srcCompat="@drawable/baseline_credit_card_24"
                app:tint="@color/app_color" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="108dp"
                android:layout_height="99dp"
                android:padding="25dp"
                android:gravity="left"
                app:srcCompat="@drawable/baseline_airport_shuttle_24"
                app:tint="@color/app_color" />

         </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Non payé"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="En cours de traitement"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Expédié"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">


    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="149dp"
            android:layout_height="129dp"
            android:padding="15dp"
            app:srcCompat="@drawable/image2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="146dp"
            android:layout_height="123dp"
            android:padding="15dp"
            app:srcCompat="@drawable/img" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="107dp"
            android:layout_height="123dp"
            android:padding="15dp"
            app:srcCompat="@drawable/img7" />


    </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="149dp"
                android:layout_height="129dp"
                android:padding="15dp"
                app:srcCompat="@drawable/image6" />

            <ImageView
                android:id="@+id/imageView1_1"
                android:layout_width="146dp"
                android:layout_height="123dp"
                android:padding="15dp"
                app:srcCompat="@drawable/img" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="106dp"
                android:layout_height="123dp"
                android:padding="15dp"
                app:srcCompat="@drawable/img8" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>